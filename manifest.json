{
	"manifest_version": 2,
	"name": "Instagram",
	"description": "",
	"version": "1.0",

	"icons": {
		"16": "images/icon.png",
		"48": "images/icon.png",
		"128": "images/icon.png"
	},

	"background": { 
		"scripts": ["js/background.js"]
	},

	"browser_action": {
		"default_icon": "images/icon.png",
		"default_title": "Instagram"
	},

	"permissions": [
		"tabs",
		"http://*/*", 
		"https://*/*",
		"https://api.instagram.com/"
	],
	
	"content_security_policy": "script-src 'self' https://api.instagram.com; object-src 'self'"
}